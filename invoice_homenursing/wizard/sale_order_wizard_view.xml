<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="project_timesheetk_create_sale_order_view_form" model="ir.ui.view">
        <field name="name">project.timesheet.create.sale.order.wizard.form</field>
        <field name="model">project.timesheet.create.sale.order</field>
        <field name="arch" type="xml">
            <form string="Create a Sales Order">

                <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group col="4">
                         <field name="project_id"/>
                         <field name="partner_id"/>
                    </group>

                    <group col="4">
                       <field name="price_unit" widget='monetary'/>
                        <field name="product_id"/>
                         <field name="product_uom_qty" invisible="1"/>
                    </group>

                    <group>

                        <field name="company_id"/>
                    </group>


                <footer>
                    <button string="Create Sales Order" type="object" name="action_create_sale_order" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object" class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="project_timesheet_action_multi_create_sale_order" model="ir.actions.act_window">
        <field name="name">Create a Sales Order</field>
        <field name="res_model">project.timesheet.create.sale.order</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_timesheetk_create_sale_order_view_form"/>
        <field name="target">new</field>
<!--        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>-->
    </record>


    <act_window id="update_project_timesheet"
                  name="Create a Sales Order"
            res_model="project.timesheet.create.sale.order"
            binding_model="account.analytic.line"
                  binding_views="list"
            view_mode="form"
            target="new"
        />

</odoo>
