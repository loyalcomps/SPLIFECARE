<odoo>
    <data>
        <report
            id="sample_goods_invoice_print"
            model="account.move"
            string="Goods Print"
            report_type="qweb-pdf"
            name="splife_goods_print.goods_invoice_print"
            file="splife_goods_print.goods_invoice_print"
        />

        <template id="goods_print_layout_header_my">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div style="font-size : 18px;" class="header">

                <div class="row">
                       <div class="col-12" align="center" style="font-family: 'Times New Roman';font-size : 18px;padding:2px;">


                    <h2>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Debit Note</span>
<!--                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Invoice</span>-->
<!--                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>-->
<!--                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>-->
<!--                        <span t-if="o.type == 'out_refund'">Credit Note</span>-->
<!--                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>-->
<!--                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>-->
<!--                        <span t-if="o.name != '/'" t-field="o.name"/>-->
                    </h2>
                       </div>
                </div>

                <div class="row">

                    <div class="col-12">


             <table  style="width:100%;font-family: 'Times New Roman';font-size : 18px;border:1px solid black;border-collapse: collapse;" >

                               <col style="width: 50%;" />
                               <col style="width: 50%;" />


                 <tr>

                     <td align="center" valign="center" style="vertical-align:middle;border:1px solid black;border-collapse: collapse;">
                                        <img align="center" valign="center"
                    t-if="o.department_id.logo"
                    t-att-src="image_data_uri(o.department_id.logo)"
                    alt="Logo" style="vertical-align:middle;max-height:150px;max-width:90%"
                />
                                   </td>

                                   <td tyle="border:1px solid black;border-collapse: collapse;padding:2px;">
                                         <p style="font-family: 'Times New Roman';font-size : 18px;padding:2px;">
                                             <span t-field="o.company_id.name"/><br/>
                                             <span t-field="o.company_id.street"/><br/>
                                <span t-field="o.company_id.street2"/><br/>
                                   <span t-field="o.company_id.city"/>
                                <span t-field="o.company_id.zip"/><br/>

<!--                                  Phone: <span t-field="o.company_id.partner_id.phone"/><br/>-->
                             <span style="font-family: 'Times New Roman';font-size : 18px; " >GSTIN/UIN: <span t-field="o.company_id.vat" /></span><br></br>
                        <span style="font-family: 'Times New Roman';font-size : 18px; " >PAN: <span t-field="o.company_id.company_registry" /></span><br/>
                         <t t-if="o.company_id.state_id.name">
                             <span style="font-family: 'Times New Roman';font-size : 18px; ">State Name :  <span t-field="o.company_id.state_id.name"/>, </span></t>

                         <span style="font-family: 'Times New Roman';font-size : 18px; ">Code : 32</span>

                            </p>
                                   </td>
                               </tr>
                      </table>
                    </div>
                </div>

            </div>
            <br/>
             <div class="footer">

                  <div class="last-page">

                                    <table style="font-family: 'Times New Roman';font-size : 18px;" >

                               <col style="width: 20%;" />
                               <col style="width: 40%;" />
                               <col style="width: 40%;" />


                               <tr>
<!--                                    <td style="visibility:hidden;">1</td>-->
                                    <td colspan="3" style="border:1px solid black;padding:2px;font-size : 18px;width:100%font-family: 'Times New Roman';Text-align:left;">
                                        Declaration<br/>
                                        We declare that the amount charged is for the services provided or to be provided as mentioned in the invoice.<br/>
                                        The contents of the invoice are true and correct.
                                    </td>
                               </tr>

                                <tr>
<!--                                    <td style="visibility:hidden;">1</td>-->
                                    <td colspan="2" style="border-left:1px solid black;padding:2px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                        Company's Bank Details
                                    </td>
                                     <td style="border-left:1px solid black;border-right:1px solid black;padding:2px;font-weight:bold;border-bottom:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                       For <span t-field="o.company_id.name"/>
<!--                                         A.S. Carehomes Pvt Ltd-->
                                    </td>
                               </tr>

                               <tr>
<!--                                    <td style="visibility:hidden;">1</td>-->
                                    <td style="border-left:1px solid black;padding:2px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                       Bank Name:
                                    </td>
                                     <td style="padding:2px;font-weight:bold;border:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                            <t t-esc="o.invoice_partner_bank_id.bank_id.name"/>
                                    </td>

                                    <td style="border-left:1px solid black;border-right:1px solid black;padding:2px;border-bottom:0px;border-top:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">

                                    </td>
                               </tr>

                               <tr>
<!--                                    <td style="visibility:hidden;">1</td>-->
                                    <td style="border-left:1px solid black;padding:2px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                       A/c No.:
                                    </td>
                                     <td style="padding:2px;font-weight:bold;border:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                            <t t-esc="o.invoice_partner_bank_id.acc_number"/>
                                    </td>

                                    <td style="border-left:1px solid black;border-right:1px solid black;padding:2px;border-bottom:0px;border-top:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">

                                    </td>
                               </tr>
                               <tr>
<!--                                    <td style="visibility:hidden;">1</td>-->
                                    <td style="border-bottom:1px solid black;border-left:1px solid black;padding:2px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                       Branch &amp; IFS Code:
                                    </td>
                                     <td style="border-bottom:1px solid black;padding:2px;font-weight:bold;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                         <t t-if="o.invoice_partner_bank_id.bank_id.street">
                                             <t t-esc="o.invoice_partner_bank_id.bank_id.street"/>
                                         </t>
                                         <t t-if="o.invoice_partner_bank_id.bank_id.bic">
                                               <t t-if="o.invoice_partner_bank_id.bank_id.street">
                                                   &amp;
                                               </t>

                                             <t t-esc="o.invoice_partner_bank_id.bank_id.bic"/>
                                         </t>

                                    </td>
                                      <td style="border-left:1px solid black;border-right:1px solid black;padding:2px;border-bottom:1px solid black;border-top:0px;font-size : 18px;font-family: 'Times New Roman';Text-align:left;">
                                    Authorised Signatory
                                    </td>
                               </tr>



                           </table>

             </div>

                 <br/>

             <table  class="fixed" style="font-family: 'Times New Roman';font-size : 18px;width:100%" >
                 <col style="width: 100%;" />
                 <tr style="border:1px solid black;border-collapse: collapse;">
                     <td align="center">
                         0471 2542666 / accounts@ashacare.in / www.ashacare.in
                     </td>

                 </tr>
                 <tr style="border:1px solid black;border-collapse: collapse;">
                     <td align="center">

                             This is a Computer Generated Invoice no signature is required

                     </td>
                 </tr>
             </table>
                 <div class="text-center page_number">
                        <div class="text-muted">
                            Page:
                            <span class="page"/>
                            of
                            <span class="topage"/>
                        </div>
                    </div>

        </div>
        </template>

        <template id="goods_print_external_layout">
            <div class="article">
                <t t-call="splife_goods_print.goods_print_layout_header_my"/>
                <t t-raw="0"/>
            </div>
        </template>

    </data>
</odoo>