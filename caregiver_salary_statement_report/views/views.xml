<odoo>
    <data>
        <record id="caregiver_report_salary_statement_wizard_views" model="ir.ui.view">
            <field name="name">caregiver.salary.statement Report</field>
            <field name="model">caregiver.salary.statement</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group >
                        <field name="company_id"/>
                    </group>

                    <footer>
                        <button name="export_xls" type="object" default_focus="1"
                                string="Excel Print" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="caregiver_report_action_salary_statement_wizards" model="ir.actions.act_window">
            <field name="name">Caregiver Salary Statement Report</field>
            <field name="res_model">caregiver.salary.statement</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="caregiver_report_salary_statement_wizard_views"/>
            <field name="target">new</field>
        </record>
        <menuitem id="caregiver_menu_salary_statement_wizards" name="Caregiver Salary Statement Report"
                  parent="hr_payroll.menu_hr_payroll_report" action="caregiver_report_action_salary_statement_wizards"/>


         <report
            id="caregiver_statement_xls"
            model="hr.payslip"
            string="Caregiver Salary Statement Report"
            report_type="xlsx"
            name="caregiver_salary_statement_report.caregiver_xls"
            file="caregiver_salary_statement_report.caregiver_xls"

        />



    </data>
</odoo>