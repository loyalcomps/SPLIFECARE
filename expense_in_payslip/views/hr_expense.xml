<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payslip_hr_expense_view_form_inherit_payroll" model="ir.ui.view">
        <field name="name">hr.expense.sheet.view.form.payroll</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="expense_in_payslip" invisible="1"/>
                <field name="active_payslip_id" invisible="1"/>
                <field name="expense_payslip_id" attrs="{'invisible':[('expense_payslip_id','=',False)]}"/>
                <label for="date_start" string="Duration"/>
                                <div>
                                    <field name="date_start" class="oe_inline" nolabel="1" attrs="{'required':[('expense_in_payslip','=',True)]}"/> -
                                    <field name="date_stop" nolabel="1" class="oe_inline" attrs="{'required':[('expense_in_payslip','=',True)]}"/>
                                </div>
            </xpath>
            <button name="action_sheet_move_create" position="after">
                <button name="expense_report_in_next_payslip" string="Expense in Next Payslip" type="object" attrs="{'invisible': ['|', ('expense_in_payslip', '=', True), ('state', '!=', 'approve')]}" class="oe_highlight"/>
            </button>
            <button name="action_sheet_move_create" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('expense_in_payslip', '=', True), ('state', '!=', 'approve')]}</attribute>
            </button>
        </field>
    </record>
</odoo>
