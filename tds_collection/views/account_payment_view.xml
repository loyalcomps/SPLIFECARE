<odoo>
    <data>


        <!-- tds in account payment form view-->
        <record id="tds_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='journal_id']" position="before">
                    <field name="tds" attrs="{'invisible': [('payment_type', 'in', ('inbound','transfer'))]}"/>
                </xpath>
                <xpath expr="//sheet/group/group/field[@name='journal_id']" position="after">
                    <field name="account_account_id" attrs="{'invisible': [('tds', '=', False)], 'required': [('tds', '!=', False)]}"
                    options="{'no_create':True}"/>
                    <field name="challan_no" attrs="{'invisible': [('tds', '=', False)]}"/>
                    <field name="tds_section_id" attrs="{'invisible': [('tds', '=', False)]}"/>
                    <field name="bsr_code" attrs="{'invisible': [('tds', '=', False)]}"/>
                    <field name="reference_no" attrs="{'invisible': [('tds', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>