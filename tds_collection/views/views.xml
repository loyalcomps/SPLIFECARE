<odoo>
    <data>
        <!-- Pan Number in contacts-->
        <record id="pan_number_res_partner_form" model="ir.ui.view">
            <field name="name">Partner Form Inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='category_id']" position="after">
                    <field name="pan_number"/>
                </xpath>
            </field>
        </record>

        <!-- tds in chart of account-->
        <record id="tds_chart_of_account_form" model="ir.ui.view">
            <field name="name">account.account.form.inherited</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='deprecated']" position="after">
                    <field name="tds_account"/>
                </xpath>
            </field>
        </record>

        <!-- TDS Section View -->
        <record id="tds_section_view_form" model="ir.ui.view">
            <field name="name">TDS Section</field>
            <field name="model">tds.section</field>
            <field name="arch" type="xml">
                <form string="TDS Section">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tds_section_view_tree" model="ir.ui.view">
            <field name="name">tds.section.view.tree</field>
            <field name="model">tds.section</field>
            <field name="arch" type="xml">
                <tree string="Tags">
                    <field name="name"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="tds_section_view_search" model="ir.ui.view">
            <field name="name">tds.section.view.search</field>
            <field name="model">tds.section</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="tds_section_action" model="ir.actions.act_window">
            <field name="name">TDS Sections</field>
            <field name="res_model">tds.section</field>
            <field name="search_view_id" ref="tds_section_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new tag
                </p>
            </field>
        </record>
      <menuitem id="tds_section_menu" parent="account.account_account_menu" action="tds_section_action" />


    </data>
</odoo>