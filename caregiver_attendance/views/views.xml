        <record id="caregiver_attendance_action_all" model="ir.actions.act_window">
            <field name="name">Caregiver Attendance</field>
            <field name="context">{'group_by': ['project_id','work_entry_type_id'],'default_name':"Attendance",
               'default_name':"Attendance", }</field>

            <field name="res_model">hr.work.entry</field>
          <field name="view_mode">tree,gantt</field>
            <field name="view_id" ref="caregiver_attendance_view_form_user"/>

           <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Record a new activity
              </p><p>
                You can register and track your workings hours by project every
                day. Every time spent on a project will become a cost and can be re-invoiced to
                customers if required.
              </p>
            </field>
        </record>


        <record id="caregiver_attendance_action_view_all_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="5"/>
            <field name="view_mode">gantt</field>
            <field name="view_id" ref="caregiver_attendance_view_form_user"/>
            <field name="act_window_id" ref="caregiver_attendance_action_all"/>
        </record>


        <menuitem id="caregiver_attendance_menu_activity_all"
            name="Caregiver Attendance"
            parent="hr_payroll.menu_hr_payroll_work_entries_root"
            action="caregiver_attendance_action_all" sequence="80"/>

