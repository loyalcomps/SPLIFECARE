<odoo>
    <data>
        <record id="tds_report_wizard_form_view" model="ir.ui.view">
            <field name="name">tds.report.wizard.form</field>
            <field name="model">tds.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field invisible="1" name="state"/>
                    <div states="choose">
                        <group col="4">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" required="1"/>
                        </group>
                    </div>
                    <div states="get">
                        <group>
                            <field name="name" colspan="4" invisible="1"/>
                            <field name="report" filename="name" colspan="4"/>
                        </group>
                    </div>
                    <footer states="choose">
                        <button name="generate_tds_report" string="Generate TDS Report" type="object"
                                class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="tds_report_wizard_action" model="ir.actions.act_window">
            <field name="name">TDS Report</field>
            <field name="res_model">tds.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tds_report_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="tds_report_wizard_menu" name="TDS Report"
                  parent="account.menu_finance_reports" action="tds_report_wizard_action"
                  sequence="10"/>
    </data>
</odoo>