<odoo>
    <data>
        <record id="report_salary_statement_wizard_views" model="ir.ui.view">
            <field name="name">salary.statement.report Report</field>
            <field name="model">salary.statement.report</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group col="4">
                        <field name="company_id"/>
                        <field name="target_move"/>
                    </group>

                    <footer>
                        <button name="export_xls" type="object" default_focus="1"
                                string="Excel Print" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="report_action_salary_statement_wizards" model="ir.actions.act_window">
            <field name="name">salary.statement.report</field>
            <field name="res_model">salary.statement.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_salary_statement_wizard_views"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_salary_statement_wizards" name="Salary Statement Report"
                  parent="hr_payroll.menu_hr_payroll_report" action="report_action_salary_statement_wizards"/>


         <report
            id="salary_statement_xls"
            model="hr.payslip"
            string="Salary Statement Report"
            report_type="xlsx"
            name="salary_statement_report.payroll_salary_statement_xls"
            file="salary_statement_report.payroll_salary_statement_xls"

        />



    </data>
</odoo>